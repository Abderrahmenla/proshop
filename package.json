{
  "name": "proshop",
  "version": "1.0.0",
  "description": "MERN shopping cart app",
  "engines": {
    "node": "14.x"
  },
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "pm2-runtime start ecosystem.config.js --env production",
    "server": "nodemon backend/server",
    "client": "npm start --prefix frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "data:import": "node backend/seeder",
    "data:destroy": "node backend/seeder -d",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install pm2 npm install --prefix frontend && npm run build --prefix frontend",
    "start-gendoc": "node ./swagger.js"
  },
  "author": "Abderrahmen lahmedi",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-async-handler": "^1.1.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.12.3",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
    "pm2": "^4.5.6",
    "swagger-autogen": "^2.8.2",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "concurrently": "^6.0.0",
    "nodemon": "^2.0.7"
  }
}
